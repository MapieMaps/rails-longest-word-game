<h1><%= @letters %></h1>
<form action="/score" method="post">
  <input type="text" name="word" placeholder="enter your word here" value=<%= params[:word] %>>
  <input id="letters" name="letters" type="hidden" value=<%= @letters %>>
  <input type="submit" value="Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>



